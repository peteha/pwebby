# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5002

# Database Configuration
# Set DATABASE_TYPE to 'postgresql' or 'sqlite'
DATABASE_TYPE=postgresql

# PostgreSQL Configuration (used when DATABASE_TYPE=postgresql)
POSTGRES_HOST=your-postgres-host
POSTGRES_DATABASE=your-database-name
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
POSTGRES_PORT=5432
POSTGRES_SSLMODE=prefer
POSTGRES_CONNECT_TIMEOUT=10

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
SQLITE_DATABASE=images.db

# Application Settings
MAX_UPLOAD_SIZE=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
DEFAULT_PAGINATION=8
MAX_IMAGES=100

# LAION Dataset Configuration
LAION_CSV_FILE=laion_sample.csv
MAX_WORKERS=8
DOWNLOAD_TIMEOUT=15
