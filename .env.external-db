# Docker Configuration for External PostgreSQL
# Copy this to .env and modify as needed

# Flask Configuration
SECRET_KEY=your-very-secure-random-secret-key-here
FLASK_DEBUG=false

# Database Configuration (External PostgreSQL)
DATABASE_TYPE=postgresql

# External PostgreSQL Configuration
POSTGRES_HOST=localhost
# For Docker on macOS/Windows, use: host.docker.internal
# For Docker on Linux, use your host IP or localhost
POSTGRES_DATABASE=imagedb
POSTGRES_USER=gallery_user
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_PORT=5432
POSTGRES_SSLMODE=prefer
POSTGRES_CONNECT_TIMEOUT=10

# Application Settings
MAX_UPLOAD_SIZE=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
DEFAULT_PAGINATION=8
MAX_IMAGES=100

# LAION Dataset Configuration
MAX_WORKERS=8
DOWNLOAD_TIMEOUT=15
